<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="">
        <li class="">
            <NavLink class="font-semibold text-gray-600 dark:text-gray-50 text-lg" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        <li class="">
            <NavLink class="font-semibold text-gray-600 dark:text-gray-50 text-lg" href="counter">
                <span class="oi oi-plus" aria-hidden="true"></span> Counter
            </NavLink>
        </li>
        <li class="">
