@page "/counter"

<h1>Counter</h1>

<p>Current count: @currentCount</p>

<button class="" @onclick="IncrementCount">Click me</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }

    [Parameter]
    public string Name { get; set; }
}
