@page "/fetchdata"
@using ExampleApp.Shared
@inject IWeatherForecastService WeatherForecastService

<h1>Weather forecast</h1>

<p>This component demonstrates fetching data from the server.</p>

@if (forecasts == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="w-full table-auto border">
        <thead>
            <tr class="bg-gray-200">
                <th class="border p-2">Date</th>
                <th class="border p-2">Temp. (C)</th>
                <th class="border p-2">Temp. (F)</th>
                <th class="border p-2">Summary</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var forecast in forecasts)
            {
                <tr>
                    <td class="border p-2">@forecast.Date.ToShortDateString()</td>
                    <td class="border p-2">@forecast.TemperatureC</td>
                    <td class="border p-2">@forecast.TemperatureF</td>
                    <td class="border p-2">@forecast.Summary</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private WeatherForecast[] forecasts;

    protected override async Task OnInitializedAsync()
    {
        forecasts = await WeatherForecastService.GetForecastAsync();
    }
}
